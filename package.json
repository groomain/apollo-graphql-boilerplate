{
  "name": "apollo-graphql-boilerplate",
  "version": "0.1",
  "description": "Groomain Apollo GraphQL Boilerplate",
  "main": "index.js",
  "author": "Groomain",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "apollo-server": "^2.14.2",
    "apollo-server-express": "^2.6.3",
    "babel-eslint": "^10.0.2",
    "body-parser": "^1.19.0",
    "core-js": "^3.1.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.13.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start": "nodemon --exec yarn babel-node -- src/index.js",
    "debug": "nodemon --exec yarn babel-node -- src/index.js --inspect",
    "lint": "eslint \"src/**/*.js*\"",
    "lint:staged": "lint-staged",
    "prettier": "prettier --write --single-quote true --trailing-comma all --print-width 120",
    "prettier:all": "prettier --write --single-quote true --trailing-comma all --print-width 120 --write 'src/**/*.js'"
  }
}
